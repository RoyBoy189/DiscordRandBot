import random
import discord
import asyncio
from discord.ext import commands

prefix = "?"

list = ["Greeks", "fanasty", "cyberpunk", "monsters", "Love", "sea", "space", "Colonial", "pirates", "superheros",
        "animals", "robots", "memes", "mythical creatures or persons", "islands", "store", "plants",
        " musical instrument", "something you can't live without"]
bot = commands.Bot(command_prefix = prefix)
n = list.length
token = "MTAzNzc2MjIwNzY2MTk2MTI0Nw.GG9I7Z.ws43ABTulNv7Kc0LX7vEdSMU8GL43ybOijLPm4"
rand = random.randint(1, n)


@bot.event
async def on_ready():
    print("The bot is ready!")


@bot.command(pass_context=True)
async def RandomIdea(ctx):
    embed = discord.Embed(title="RandomIdea", description=(list[rand]), color=(0xF85252))
    await ctx.send(embed=embed)


async def on_message(message):
    message.content = message.content.lower()
    if message.content.startswith("#add"):
        await bot.send_message(message.channel, "what is your idea?")
        msg = await bot.wait_for_message(timeout=10, author=message.author)
        if msg:
            list.append(message.content)
            await bot.send_message(message.channel, "added to list")
            n = list.length

    if message.content.startswith("#idealist"):
        values = ",".join(map(str, list))
        await bot.send_message(message.channel, values)

    if message.content.startswith("#remove"):
        await bot.send_message(message.channel, "What message should I remove")
        msg = await bot.wait_for_message(timeout=10, author=message.author)
        for x in list:
            if msg and list[x] == message.content:
                list.remove(message.content)
                await bot.send_message(message.channel, "removed from list")
                n = list.length


bot.run(token)
